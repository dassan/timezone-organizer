{
    "manifest_version": 3,
    "name": "TimeZone Organizer",
    "version": "1.0",
    "description": "View multiple time zones organized by current time",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }